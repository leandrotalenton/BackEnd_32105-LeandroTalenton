<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>test</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@200;400&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/navBar.css" />
    <link rel="stylesheet" href="/styles/formulario.css" />
    <link rel="stylesheet" href="/styles/productos.css" />
    <link rel="stylesheet" href="/styles/normalize.css" />
    <link rel="stylesheet" href="/styles/bannerMegalateral.css" />
    <link rel="stylesheet" href="/styles/layout.css" />
    <link rel="stylesheet" href="/styles/card.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <link rel="shortcut icon" href="data:image/x-icon;," type="image/x-icon" />
  </head>
  <body>
    <%- include( './partials/navBar' ) %>
    <main class="content-main">
      <div class="sidebar__aside">
        <%- include( './partials/bannerMegalateral' ) %>
      </div>
      <div class="sidebar__main">
        <div class="productos producto">
          <div class="card-container" id="productos--tbody">
            Cargando productos...
          </div>
        </div>
      </div>
    </main>
    <a class="chat__admin" href="/chat/123"
      ><span>Contactar al admin</span></a
    >
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script src="/scripts/publicScript.js"></script>
    <script>
      const arrayProdData = JSON.parse(`<%- JSON.stringify(arrayProdData) %>`);
      renderProductos(arrayProdData, "cards");
      document.querySelector("#filtrar").addEventListener("click", (e) => {
        e.preventDefault();
        const filterValue = document.querySelector("#categoria").value;
        const urlWithoutQuery = document.URL.split("?")[0];
        window.location.href = `${urlWithoutQuery}?category=${filterValue}`;
      });
    </script>
  </body>
</html>
